<%=form_for @post do |f|%>
<%=f.label :title%><br>
<%=f.text_field :title%> <br>
<%=f.label :content%><br>
<%=f.text_field :content%> <br>
<!-- check boxes for us to select categories -->
<li>Pick a category</li>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
<!-- end check boxes -->
<!-- text field for new category -->
<li>Or create a new category</li>
<%=f.fields_for :categories, post.categories.build do |categories_fields| %>
<%= categories_fields.text_field :name%>
<%end%>
<!-- end text field -->
<p><%=f.submit%></p>
<%end%>
